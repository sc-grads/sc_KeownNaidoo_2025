<Window x:Class="ListWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="350">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height = "10" />
            <RowDefinition Height = "*" />
            <RowDefinition Height = "10" />
            <RowDefinition Height = "50" />
            <RowDefinition Height = "10" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "10" />
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "10" />

        </Grid.ColumnDefinitions>
        <ListBox x:Name="listName" Grid.Column="1" Grid.Row="1" SelectionMode="Multiple">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Path= Name, StringFormat='Name: {0}'}"/>
                        <TextBlock Text="{Binding Path= Age, StringFormat='Age: {0}'}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>

            <Button Click="Button_Click" Grid.Column= "1" Grid.Row= "3" Content="Hello"/>

        </ListBox>


    </Grid>
</Window>
